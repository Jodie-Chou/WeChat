<form bindsubmit="formSumbit" bindreset="formReset">
    <view class="content">
        <view class="hr"></view>
        <view class="item">
            <input type="text" placeholder="请设置4-20位的用户名" placeholder-class="holder" bindblur="accountBlur" name="username"/>
        </view>
        <view class="item flex">
            <input type="password" placeholder="请设置6-20位密码" placeholder-class="holder" name="password"/>
            <switch type="switch" />
        </view>
        <view class="item">
            <input type="text" placeholder="请填写工商局注册名称" placeholder-class="holder" name="company"/>
        </view>
        <view class="item">
            <input type="text" placeholder="联系人姓名" placeholder-class="holder" name="name"/>
        </view>
        <view class="mobileinfo">
            <input type="text" placeholder="请输入手机号" placeholder-class="holder" name="mobile"/>
            <view class="code">发送手机号</view>
        </view>
        <view class="item">
            <input type="text" placeholder="短信验证码" placeholder-class="holder" name="yzm"/>
        </view>
        <button class="btn" form-type="submit" disabled="{{disabled}}">登录</button>
    </view>
</form>