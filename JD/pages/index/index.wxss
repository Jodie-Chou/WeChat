/**index.wxss**/
.container{
  padding-top:40px;
}
.account{
  display:flex;
  flex-direction: row;
  padding-left:20px;
  padding-top:20px;
  padding-bottom: 10px;
}
.title{
  margin-right: 30px;
  font-weight: bold;
}
.hr{
  border:1px solid #ccc;
  width:90%;
  opacity: 0.2;
}

.see{
  position: absolute;
  right:20px;
}
.btn{
  width:90%;
  margin-top:40px;
  color:#999;
  }
button[disabled]{
  color:#999;
  opacity: 0.6;
}
.operate{
  width:100%;
  display: flex;
  flex-direction: row;
}
.operate view{
  margin:0 auto;
  font-size: 14px;
  color:#333;
  margin-top:40px;
}
.login{
  display: flex;
  flex-direction: row;
  width:90%;
  margin-top:40px;
}
.login view{
  margin: 0 auto;
      }
.login image{
  width:43px;
  height:46px;
}